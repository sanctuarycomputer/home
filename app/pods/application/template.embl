#application class=global.appLoaded:loaded

  nav.vertical-center
    each sectionName in global.sectionNames
      .item{action 'scrollToWaypoint' sectionName target="view"}
        .circle.vertical-center

  header.animated.fadeInDown
    .small-12.columns.vertical-center
      h3.brown-regular Sanctuary Computer

  = outlet

  footer.animated.fadeInUp
    .small-12.columns.vertical-center
      h4.austincyr-semibold= global.currentSectionTagline